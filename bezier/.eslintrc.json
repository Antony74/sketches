{
    "env": {
        "browser": true,
        "jquery": true
    },
    "globals": {
        "createCanvas": false,
        "loop": false,
        "noLoop": false,
        "rectMode": false,
        "RADIUS": false,
        "rect": false,
        "noStroke": false,
        "fill":  false
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-tabs": [
            "error"
        ],
        "no-console": [
            "off"
        ],
        "no-unused-vars": [
            "off"
        ],
		"brace-style": [
			"error",
			"1tbs"
		] 
    }
}

